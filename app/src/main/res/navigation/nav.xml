<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.androidapprpg.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_newGame"
            app:destination="@id/nav_newgame" />

        <action
            android:id="@+id/action_home_to_myGames"
            app:destination="@id/nav_mygames" />

        <action
            android:id="@+id/action_home_to_joinGame"
            app:destination="@id/nav_joingame" />
    </fragment>



    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.androidapprpg.ui.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.androidapprpg.ui.fragment.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/lettersFragment"
        android:name="com.example.androidapprpg.ui.fragment.NotificationsFragment"
        android:label="fragment_letters"
        tools:layout="@layout/fragment_letters" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.androidapprpg.ui.fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />


    <!--Nested Graphs-->
    <include app:graph="@navigation/nav_newgame" />
    <include app:graph="@navigation/nav_joingame" />
    <include app:graph="@navigation/nav_mygames" />

</navigation>
