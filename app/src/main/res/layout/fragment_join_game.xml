<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:fitsSystemWindows="false"
    tools:context=".ui.fragment.JoinGameFragment">

    <!-- Barra superior -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/VermelhoEscuro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleNewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="@string/Entrar_jogo"
            android:fontFamily="@font/cinzel_font_bold"
            android:textColor="@color/DouradoEspecial"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/btnFechar"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/fechar"
            android:src="@drawable/close_circle_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/titleNewGame"
            app:layout_constraintStart_toEndOf="@id/titleNewGame"
            app:layout_constraintTop_toTopOf="@id/titleNewGame" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Separador -->
    <View
        android:id="@+id/separadorDourado"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/DouradoEspecial"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card centralizado -->
    <LinearLayout
        android:id="@+id/cardEntrar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/retangulo_arredondado"
        android:padding="24dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/separadorDourado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite o ID do Jogo:"
            android:fontFamily="@font/cinzel_font_bold"
            android:textColor="@color/BordasDouradas"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID do Jogo"
            app:boxBackgroundMode="outline"
            android:textColorHint="@color/BordasDouradas"
            app:boxStrokeColor="@color/BordasDouradas"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxBackgroundColor="@color/Crowshead">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputIdJogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cinzel_font_bold"
                android:textColor="@color/BordasDouradas"
                android:textColorHint="@color/BordasDouradas"
                android:inputType="text"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BotÃ£o Entrar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEntrarJogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn1"
            android:text="Entrar"
            android:textSize="18sp"
            android:textColor="@color/BordasDouradas"
            android:fontFamily="@font/cinzel_font_bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
