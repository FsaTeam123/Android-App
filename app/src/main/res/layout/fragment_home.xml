<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/NewGame"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:fontFamily="@font/cinzel_font_bold"
            android:text="@string/Criar_jogo"
            android:textColor="@color/BordasDouradas"
            android:textSize="21sp"
            android:background="@android:color/transparent"
            android:visibility="visible" />

        <Button
            android:id="@+id/JoinGame"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/Entrar_jogo"
            android:textSize="21sp"
            android:fontFamily="@font/cinzel_font_bold"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:textColor="@color/BordasDouradas" />

        <Button
            android:id="@+id/MyGames"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/Meus_Jogos"
            android:textSize="21sp"
            android:fontFamily="@font/cinzel_font_bold"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:textColor="@color/BordasDouradas" />
    </LinearLayout>
</FrameLayout>