<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login_background"
    tools:context=".Android_Activity.ActivityLogin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel_font_bold"
        android:text="@string/rpg"
        android:textAlignment="center"
        android:textColor="@color/BordasDouradas"
        android:textFontWeight="600"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/Email"
            android:textColorHint="@color/BordasDouradas"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/Crowshead"
            app:boxStrokeColor="@color/BordasDouradas"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cinzel_font_bold"
                android:inputType="textEmailAddress"
                android:minHeight="50dp"
                android:padding="12dp"
                android:textColor="@color/BordasDouradas"
                android:textColorHint="@color/BordasDouradas"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Senha -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/Senha"
            android:textColorHint="@color/BordasDouradas"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/Crowshead"
            app:boxStrokeColor="@color/BordasDouradas"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/BordasDouradas">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:textColorHint="@color/BordasDouradas"
                android:textColor="@color/BordasDouradas"
                android:fontFamily="@font/cinzel_font_bold"
                android:textSize="15sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Fortgot_Password"
            android:textSize="12sp"
            android:fontFamily="@font/cinzel_font_bold"
            android:textColor="@color/BordasDouradas"
            android:layout_gravity="end"
            android:paddingTop="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/DarkSiena"
            android:fontFamily="@font/cinzel_font_bold"
            android:text="@string/Login"
            android:textAlignment="center"
            android:textColor="@color/BordasDouradas"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/sentence"
            android:textSize="14sp"
            android:fontFamily="@font/cinzel_font_bold"
            android:textColor="@color/BordasDouradas"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="18sp"
            android:fontFamily="@font/cinzel_font_bold"
            android:textColor="@color/BordasDouradas"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
