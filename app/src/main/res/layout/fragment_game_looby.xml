<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lobbyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".ui.fragment.GameLobbyFragment">

    <!-- Ícone de Perfil (superior esquerdo) -->
    <ImageView
        android:id="@+id/iconePerfil"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/retangulo_borda_fundo_transparente"
        android:src="@drawable/baseline_person_24"
        android:contentDescription="Perfil"
        app:tint="@color/BordasDouradas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Ícone de Configurações (superior direito) -->
    <ImageView
        android:id="@+id/iconeConfiguracoes"
        android:layout_width="41dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Configurações"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/BordasDouradas" />

    <!-- Título -->
    <TextView
        android:id="@+id/tituloLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/cinzel_font_bold"
        android:text="SALA DE AVENTURA"
        android:textColor="@color/DouradoEspecial"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Linha decorativa abaixo do título -->
    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/DouradoEspecial"
        app:layout_constraintTop_toBottomOf="@id/tituloLobby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Código da Sala + botão copiar -->
    <LinearLayout
        android:id="@+id/codigoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tituloLobby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/labelCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÓDIGO:"
            android:textColor="@color/BordasDouradas"
            android:textSize="18sp"
            android:fontFamily="@font/cinzel_font_bold"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/textCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#84391"
            android:textColor="@color/BordasDouradas"
            android:textSize="18sp"
            android:fontFamily="@font/cinzel_font_bold" />

        <ImageView
            android:id="@+id/btnCopiar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_copy"
            android:contentDescription="Copiar código"
            app:tint="@color/BordasDouradas" />
    </LinearLayout>

    <!-- Lista de jogadores -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerJogadores"
        android:layout_width="388dp"
        android:layout_height="232dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/retangulo_borda_fundo_transparente"
        android:clipToPadding="false"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/codigoContainer" />

    <!-- Status do Lobby -->
    <TextView
        android:id="@+id/statusLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/cinzel_font_bold"
        android:text="Aguardando o mestre iniciar o jogo..."
        android:textColor="@color/BordasDouradas"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/recyclerJogadores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Iniciar Jogo -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIniciarJogo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Jogo"
        android:textColor="@color/BordasDouradas"
        android:background="@drawable/btn1"
        android:fontFamily="@font/cinzel_font_bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/statusLobby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botões inferiores -->
    <LinearLayout
        android:id="@+id/botoesLobby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEncerrarSessao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn1"
            android:text="Encerrar"
            android:textColor="@color/BordasDouradas"
            android:textSize="16sp"
            android:fontFamily="@font/cinzel_font_bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIniciarSessao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn1"
            android:text="Iniciar Sessão"
            android:textColor="@color/BordasDouradas"
            android:textSize="16sp"
            android:fontFamily="@font/cinzel_font_bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
